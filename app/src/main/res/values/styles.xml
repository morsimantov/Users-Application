<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">3%</item> <!-- Adjust the percentage based on your requirements -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Define the attribute here. -->
        <item name="android:windowContentTransitions">true</item>
    </style>
    <!-- In res/values/styles.xml -->
    <style name="UnderlinedButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>